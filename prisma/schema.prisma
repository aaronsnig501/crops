generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.sqlite"
}

model Category {
  id          Int @id @default(autoincrement())
  name        String
  crops       Crop[]
  description String
  grow        String
  store       String
  preserve    String
  cook        String
}

model Crop {
  id          Int @id @default(autoincrement())
  name        String
  categoryId  Int
  category    Category @relation(references: [id], fields: [categoryId], onDelete: Cascade)
  types       Type[]
  description String
  grow        String
  store       String
  preserve    String
  cook        String
}

model Type {
  id          Int @id @default(autoincrement())
  name        String
  cropId      Int
  crop        Crop @relation(references: [id], fields: [cropId], onDelete: Cascade)
  description String
  grow        String
  store       String
  preserve    String
  cook        String
}
